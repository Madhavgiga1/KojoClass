<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".teacherapp.TeacherMainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:background="@color/dark"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/ClassNameID"
                android:gravity="center|start"

                android:text="Class Name"
                android:padding="7dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontFamily="@font/mazzardextrabold">

            </TextView>
        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/lcr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2">

        </View>

        <TextView
            android:id="@+id/textView56"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/lcr"
            android:padding="2dp"
            android:gravity="center"
            android:text="Take Complete Control of your classes"
            android:textColor="@color/maybecyant"
            android:textSize="14sp"
            app:fontFamily="@font/mazzardextrabold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5" />


        <TextView
            android:id="@+id/textView58"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:text="Mrs Veena Khandelwal"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/yellow"
            android:textSize="20sp"
            app:fontFamily="@font/mazzardextrabold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView56" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewA"
            android:layout_width="200dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/brightgreen"
            app:cardBackgroundColor="@color/ShadeofDark"

            android:layout_height="220dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView58">

            <!-- Add your image and text inside this CardView -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView62"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take me to"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textColor="@color/yellow"
                    android:textSize="13sp"
                    app:fontFamily="@font/mazzardextrabold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView63"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Quiz Hub"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textColor="@color/yellow"
                    android:textSize="20sp"
                    app:fontFamily="@font/mazzardextrabold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView62" />

                <ImageView
                    android:id="@+id/imageView37"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView63"
                    app:srcCompat="@drawable/quiz_new_icon" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CardView B -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewB"
            android:layout_width="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/BalticSeabgcolor"
            android:layout_height="0dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/mixred"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardViewA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardViewA"
            app:layout_constraintTop_toTopOf="@+id/cardViewA">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView65"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Resource Hub"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:fontFamily="@font/mazzardextrabold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView66" />

                <ImageView
                    android:id="@+id/imageView39"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView65"
                    app:srcCompat="@drawable/doinghomework"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/textView66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Take me to "
                    android:textColor="@color/yellow"
                    android:textSize="13sp"
                    app:fontFamily="@font/mazzardextrabold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewC"
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:layout_marginStart="8dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/BalticSeabgcolor"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/yellow"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewA">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Take me to the"
                    android:textColor="@color/greenishbg"
                    android:textSize="13sp"
                    app:fontFamily="@font/mazzardextrabold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView36"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView61"
                    app:srcCompat="@drawable/student" />

                <TextView
                    android:id="@+id/textView61"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Assignment Hub"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textColor="@color/mixred"
                    android:textSize="20sp"
                    app:fontFamily="@font/mazzardextrabold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView60" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CardView D -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewD"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/ShadeofDark"
            app:strokeWidth="1dp"
            app:strokeColor="@color/ShadeofDark"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="15dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardViewC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardViewC"
            app:layout_constraintTop_toBottomOf="@+id/cardViewB">

            <!-- Add your image and text inside this CardView -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView64"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Edit class participants"
                    android:textColor="@color/yellow"
                    android:textSize="20sp"
                    app:fontFamily="@font/mazzardextrabold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView38"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView64"
                    app:srcCompat="@drawable/register" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>