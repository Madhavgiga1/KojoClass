<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ShadeofDark">

    <TextView
        android:id="@+id/teacher_login_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo_paaji_2_extrabold"
        android:text="Teacher Login"
        android:textAlignment="center"
        android:textColor="@color/maybecyant"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacher_signin_image_view" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/teacher_email_edit_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/purple_200"
        android:hint="Teacher ID"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textColorHint="@color/maybecyant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/teacher_email_image_view"
        app:layout_constraintTop_toBottomOf="@+id/teacher_welcome_text_view" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/teacher_password_edit_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/purple_200"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/maybecyant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/teacher_password_image_view"
        app:layout_constraintTop_toBottomOf="@+id/teacher_email_edit_text" />


    <TextView
        android:id="@+id/teacher_forgot_password_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Forgot Password?"
        android:textColor="@color/Cream"
        app:fontFamily="@font/mazzardbolditalic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacher_signin_card_view"
        app:layout_constraintVertical_bias="0.081" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/teacher_signin_card_view"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="25dp"
        app:cardBackgroundColor="@color/mixred"
        app:cardCornerRadius="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacher_password_edit_text"
        app:strokeColor="@color/BalticSeabgcolor"
        app:strokeWidth="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/teacher_login_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/teacher_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="28sp"
                app:fontFamily="@font/bungee_inline"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/teacher_signin_image_view"
        android:layout_width="0dp"
        android:layout_height="380dp"
        android:scaleType="centerCrop"
        android:src="@drawable/studymaterical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ProgressBar
        android:id="@+id/teacher_signin_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toStartOf="@+id/teacher_signin_card_view"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacher_password_edit_text" />

    <ImageView
        android:id="@+id/teacher_email_image_view"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacher_welcome_text_view"
        app:srcCompat="@drawable/class_2108926" />

    <ImageView
        android:id="@+id/teacher_password_image_view"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacher_email_image_view"
        app:srcCompat="@drawable/password" />

    <TextView
        android:id="@+id/teacher_welcome_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="WELCOME BACK!"
        android:textColor="@color/mixred"
        android:textSize="25sp"
        app:fontFamily="@font/baloo_paaji_2_extrabold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacher_login_title" />


</androidx.constraintlayout.widget.ConstraintLayout>
