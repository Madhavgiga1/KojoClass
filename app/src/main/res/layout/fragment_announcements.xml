<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rtc"
    tools:context=".ui.fragments.SubjectDetail.AnnouncementFragment">

    <TextView
        android:id="@+id/textView27"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Catch up with all "
        android:textColor="@color/BalticSeabgcolor"
        android:textSize="20sp"


        app:fontFamily="@font/mazzardextrabold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView23"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/lcr"
        android:gravity="center"
        android:padding="5dp"
        android:text="Important Announcements"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:fontFamily="@font/mazzardextrabold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView23"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView23"
        android:layout_width="70dp"
        android:layout_height="0dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/ShadeofDark"
        android:src="@drawable/house"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/textView26"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView27" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/announcement_rv"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

</androidx.constraintlayout.widget.ConstraintLayout>