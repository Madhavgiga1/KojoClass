<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="180dp"
    android:background="@drawable/rounded_bottom_rectangle">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="16dp"
        android:text="Due On : "
        android:textColor="#D0BA68"
        app:fontFamily="@font/fredoka_one"
        app:layout_constraintStart_toEndOf="@+id/assignment_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/due_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="2 September"
        android:textColor="#D0BA68"
        app:fontFamily="@font/fredoka_one"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/assignment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Assignment"
        android:textColor="@color/Cream"
        android:textSize="22sp"
        app:fontFamily="@font/fredoka_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/assignment_subjectcode"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:padding="5dp"
        android:background="@drawable/ct_rec_bg"
        android:gravity="center"
        android:text="Subject"
        android:textColor="@color/Cream"
        app:fontFamily="@font/fredoka_one"
        app:layout_constraintEnd_toEndOf="@+id/assignment_name"
        app:layout_constraintHorizontal_bias="0.314"
        app:layout_constraintStart_toStartOf="@+id/assignment_name"
        app:layout_constraintTop_toBottomOf="@+id/assignment_name" />

    <TextView
        android:id="@+id/submitted_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        android:text="Submitted :"
        android:textColor="@color/mistyighter"
        android:textSize="15sp"
        app:fontFamily="@font/fredoka_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/submitted_text"
        app:layout_constraintStart_toEndOf="@+id/submitted_text"
        app:layout_constraintTop_toTopOf="@+id/submitted_text"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/filter" />
</androidx.constraintlayout.widget.ConstraintLayout>